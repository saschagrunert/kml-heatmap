# Test Docker Image for KML Heatmap

# Stage 1: Node.js environment for JS tests
FROM node:lts-slim AS js-env

WORKDIR /app

# Copy JavaScript/TypeScript build configuration
COPY package.json package-lock.json build.js vitest.config.js tsconfig.json tsconfig.eslint.json eslint.config.js ./
COPY kml_heatmap/frontend/ ./kml_heatmap/frontend/

# Install Node.js dependencies
RUN npm ci

# Copy JS tests
COPY tests/frontend/ ./tests/frontend/

# Stage 2: Final test image
FROM python:3.14-slim

# Install Node.js from official image instead of curl|bash
COPY --from=node:lts-slim /usr/local/bin/node /usr/local/bin/node
COPY --from=node:lts-slim /usr/local/lib/node_modules /usr/local/lib/node_modules
RUN ln -s /usr/local/lib/node_modules/npm/bin/npm-cli.js /usr/local/bin/npm && \
    ln -s /usr/local/lib/node_modules/npm/bin/npx-cli.js /usr/local/bin/npx

# Set working directory
WORKDIR /app

# Copy requirements
COPY requirements.txt requirements-test.txt ./

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir -r requirements-test.txt

# Copy application code
COPY kml-heatmap.py .
COPY kml_heatmap/ ./kml_heatmap/
COPY scripts/ ./scripts/
COPY pytest.ini mypy.ini .

# Copy JavaScript/TypeScript build configuration and node_modules from js-env
COPY package.json build.js vitest.config.js tsconfig.json tsconfig.eslint.json eslint.config.js ./
COPY --from=js-env /app/node_modules ./node_modules

# Copy tests
COPY tests/ ./tests/

# Create a script to run both test suites
RUN cat > /app/run-tests.sh << 'EOF'
#!/bin/bash
set -e

echo "=== Running JavaScript tests with coverage ==="
npm run test:coverage

echo ""
echo "=== Running Python tests with coverage ==="
pytest --cov=kml_heatmap --cov-report=xml:coverage/coverage.xml --cov-report=html --cov-report=term

echo ""
echo "=== Test Summary ==="
echo "âœ“ JavaScript coverage: coverage/coverage-final.json"
echo "âœ“ Python coverage: coverage/coverage.xml, htmlcov/"
EOF

RUN chmod +x /app/run-tests.sh

# Run both test suites
CMD ["/app/run-tests.sh"]
